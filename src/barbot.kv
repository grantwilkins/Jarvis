#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<HomeScreen>:  
    BoxLayout:
        orientation: "vertical"
        Label:
            text: 'BarBot'
            font_size: 64
            font: 'bold'
            color: 0.92, 0.45, 0
            
        MDRaisedButton:
            text: "Drink Menu"
            pos_hint: {"center_x":.5, "center_y":.5 }
            on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "flavor"

        
        MDRaisedButton:
            text: "Admin"
            pos: 50, 50
            #pos_hint: {"center_x":.75, "center_y":.5 }
            on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "admin"


<DrinkMenu>:

    Label:
        text: 'Click a drink to order!'
        font_size: 20
        font: 'bold'
        color: 1, 0.45, 0
        pos_hint: {"center_x":.5, "center_y": 0.95}


    StackLayout:
        id: stack

    MDRaisedButton:
        text: "Back"
        md_bg_color: "red"
        pos_hint: {"center_x":0.04, "center_y":0.03}
        on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "home"


<FlavorMenu>:

    Label:
        text: 'Click a flavor to add to your order!'
        font_size: 20
        font: 'bold'
        color: 1, 0.45, 0
        pos_hint: {"center_x":.5, "center_y": 0.95}


    StackLayout:
        id: stack

    MDRaisedButton:
        text: "Back"
        md_bg_color: "red"
        pos_hint: {"center_x":0.04, "center_y":0.03}
        on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "home"





<AdminMenu>:
    FloatLayout:
        MDRaisedButton:
            text: "Back"
            pos: 0, 0
            md_bg_color: "red"
            #pos_hint: {"center_x":.75, "center_y":.5 }
            on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "home"

        TextInput:
            id: c1
            size_hint: .5, .05
            pos_hint: {"center_x":.25, "center_y": 0.94}
            spacing: 0


        Label:
            text: 'Container 1'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0
            pos_hint: {"center_x":.25, "center_y": 0.89}


        TextInput:
            id: c2
            size_hint: .5, .05
            pos_hint: {"center_x":.5, "center_y": 0.78}
            
        Label:
            text: 'Container 2'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0
            pos_hint: {"center_x":.5, "center_y": 0.73}


        TextInput:
            id: c3
            size_hint: .5, .05
            pos_hint: {"center_x":.5, "center_y": 0.62}

        Label:
            text: 'Container 3'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0  
            pos_hint: {"center_x":.5, "center_y": 0.57}


            
        TextInput:
            id: c4
            size_hint: .5, .05
            pos_hint: {"center_x":.5, "center_y": 0.46}

        
        Label:
            text: 'Container 4'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0  
            pos_hint: {"center_x":.5, "center_y": 0.41}


        TextInput:
            id: c5
            size_hint: .5, .05
            pos_hint: {"center_x":.5, "center_y": 0.3}

        
        Label:
            text: 'Container 5'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0  
            pos_hint: {"center_x":.5, "center_y": 0.25}


        TextInput:
            id: c6
            size_hint: .5, .05
            pos_hint: {"center_x":.5, "center_y": 0.14}

        
        Label:
            text: 'Container 6'
            font_size: 20
            font: 'bold'
            color: 1, 0.45, 0  
            pos_hint: {"center_x":.5, "center_y": 0.09}



        MDRaisedButton:
            text: "Submit"
            pos_hint: {"center_x":.75, "center_y":.05 }
            md_bg_color: "green"
            on_press: root.submit(); app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "home"
            #on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "home"




