#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<HomeScreen>:  
    BoxLayout:
        orientation: "vertical"
        Label:
            text: 'BarBot'
            font_size: 64
            font: 'bold'
            color: 0.92, 0.45, 0
            
        MDRaisedButton:
            text: "Drink Menu"
            pos_hint: {"center_x":.5, "center_y":.5 }
            on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "menu"

        
        MDRaisedButton:
            text: "Admin"
            pos: 50, 50
            #pos_hint: {"center_x":.75, "center_y":.5 }
            on_press: app.root.transition = FadeTransition(clearcolor=(0.9,0.75,0.21)); app.root.current = "admin"


